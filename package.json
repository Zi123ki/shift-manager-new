{
  "name": "shift-manager",
  "version": "1.0.0",
  "description": "A comprehensive shift management application with multi-tenant support",
  "private": true,
  "scripts": {
    "dev": "npm run dev --workspace=@shift-manager/web",
    "dev:api": "npm run dev --workspace=@shift-manager/api",
    "build": "cd apps/web && npm install && npm run build",
    "build:workspace": "npm run build --workspace=@shift-manager/web",
    "build:api": "npm run build --workspace=@shift-manager/api",
    "test": "npm run test --workspaces --if-present",
    "db:generate": "npm run generate --workspace=@shift-manager/db",
    "db:migrate": "npm run migrate --workspace=@shift-manager/db",
    "db:seed": "npm run seed --workspace=@shift-manager/db",
    "db:studio": "npm run studio --workspace=@shift-manager/db",
    "type-check": "npm run type-check --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}